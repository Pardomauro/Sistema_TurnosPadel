# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# ============================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# ============================================
# IMPORTANTE: Cada desarrollador debe crear su propio archivo .env
# basado en este ejemplo con sus credenciales locales

DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=sistema_turnos_padel

# ============================================
# CONFIGURACIÓN DE JWT
# ============================================
# IMPORTANTE: Cambiar por una clave secreta fuerte en producción
JWT_SECRET=tu_clave_secreta_super_fuerte_aqui_cambiar_en_produccion
JWT_EXPIRES_IN=24h

# ============================================
# CONFIGURACIÓN DE EMAIL
# ============================================
# Para Gmail, necesitas una "Contraseña de aplicación"
# No uses tu contraseña personal de Gmail
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_contraseña_de_aplicacion_gmail

# ============================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================
# Configuraciones específicas para desarrollo
DEBUG=true
LOG_LEVEL=debug

# ============================================
# INSTRUCCIONES PARA NUEVOS DESARROLLADORES
# ============================================
# 1. Copia este archivo como .env
# 2. Cambia los valores según tu configuración local
# 3. Nunca subas el archivo .env al repositorio
# 4. Crea tu base de datos local: sistema_turnos_padel
# 5. Importa el schema SQL si existe